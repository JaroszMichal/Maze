<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Game.MainActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background"
    android:scaleType="centerCrop"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="50sp"
    android:textStyle="bold"
    android:text="Labirynt"
    android:textColor="#FF0900"
    android:layout_above="@id/play"
    android:layout_below="@id/options"
    android:layout_centerHorizontal="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Graj"
    android:textSize="50sp"
    android:textStyle="bold"
    android:layout_centerInParent="true"
    android:textColor="#000000"
    android:id="@+id/play"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:text="Opcje"
    android:id="@+id/options"
    android:layout_margin="16dp"
    android:layout_alignParentRight="true"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="#000000"
    android:text="@string/_2020_adam_lewandowski_micha_jarosz"
    android:layout_margin="16dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Poziom 4: "
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/poziom4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Poziom 3: "
        android:layout_alignParentLeft="true"
        android:id="@+id/poziom3"
        android:layout_above="@+id/poziom4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Poziom 2: "
        android:layout_alignParentLeft="true"
        android:id="@+id/poziom2"
        android:layout_above="@+id/poziom3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Poziom 1: "
        android:layout_alignParentLeft="true"
        android:id="@+id/poziom1"
        android:layout_above="@+id/poziom2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Rekordy: "
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/poziom1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        />

</RelativeLayout>